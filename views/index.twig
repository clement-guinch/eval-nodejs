{% extends 'layout.twig' %}

{% block body %}
    <h1>Redroom</h1>
    <p>Bienvenue sur notre plateforme</p>

    <button id="btnLogout" class="">Déconnexion</button>

    <div class="home">
        <div class="home__container">
            <div class="" id="loginContainer">
                <div class="">
                    <h3 class="">Identification</h3>
                    <form class="form" action="/users" method="POST" id="loginForm">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <input type="submit" class="" id="loginSubmit" value="Identification">
                    </form>
                </div>
            </div>
        </div>

        <div class="" id="registerContainer">
            <div class="">
                <div class="card-header">
                    <h3 class="mb-0">Création de compte</h3>
                </div>
                <div class="">
                    <form class="form" action="/users" method="POST" id="registerForm">
                        <div class="form-group avatar-container">
                            <div>
                                <input type="radio" id="1" name="avatar" value="avatar1">
                                <img width="50" height="50" src="/images/avatar1.svg" alt="Avatar" class="avatar">
                            </div>

                            <div>
                                <input type="radio" id="2" name="avatar" value="avatar2">
                                <img width="50" height="50" src="/images/avatar2.svg" alt="Avatar" class="avatar">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username">Nom d'utilisateur</label>
                            <input type="text" class="form-control" name="username" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Confirmation de mot de passe</label>
                            <input type="password" name="password_confirm" class="form-control" required>
                        </div>
                        <input type="submit" class="" id="registerSubmit"
                               value="Créer mon compte">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
